<Window x:Class="KarateManagement.EditStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditStudent" Height="500" Width="400">
    <Grid Name="DataGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Content="ID" />
        <Label Grid.Row="1" Grid.Column="0" Content="First Name" />
        <Label Grid.Row="2" Grid.Column="0" Content="Last Name" />
        <Label Grid.Row="3" Grid.Column="0" Content="Date of Birth" />
        <Label Grid.Row="4" Grid.Column="0" Content="Address" />
        <Label Grid.Row="5" Grid.Column="0" Content="Postal Code" />
        <Label Grid.Row="6" Grid.Column="0" Content="Phone Number" />
        <Label Grid.Row="7" Grid.Column="0" Content="Email" />
        <Label Grid.Row="8" Grid.Column="0" Content="Hours" />
        <Label Grid.Row="9" Grid.Column="0" Content="Belt" />
        <Label Grid.Row="10" Grid.Column="0" Content="Balance" />
        <Label Grid.Row="11" Grid.Column="0" Content="Membership End Date" />
        
        
        
        <Label Name="ID_Label" Grid.Row="0" Grid.Column="1"></Label>
        <TextBox Name="FirstName_TextBox" Grid.Row="1" Grid.Column="1"></TextBox>
        <TextBox Name="LastName_TextBox" Grid.Row="2" Grid.Column="1"></TextBox>
        <DatePicker Grid.Row="3" Grid.Column="1"></DatePicker>
        
        
        
        
        
        
    </Grid>
</Window>
