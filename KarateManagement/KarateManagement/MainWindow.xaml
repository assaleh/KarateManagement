<Window x:Class="KarateManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid Name="WindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <Menu DockPanel.Dock="Top" Height="23" VerticalAlignment="Top" IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="{DynamicResource File}">
                <MenuItem Header="{DynamicResource NewStudent}" Click="NewStudent_OnClick"></MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1">
            <Button Name="DeleteStudentButton" Click="DeleteStudentButton_OnClick" Width="50" Height="30">Delete</Button>
        </StackPanel>


        <ListView Grid.Row="2" VerticalAlignment="Stretch" Name="StudentList" MouseDoubleClick="StudentList_OnMouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30" DisplayMemberBinding="{Binding StudentItem.ID}">
                        <GridViewColumnHeader Content="ID"></GridViewColumnHeader>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        
        
        
    </Grid>
</Window>
