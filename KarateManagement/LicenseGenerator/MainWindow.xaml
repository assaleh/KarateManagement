<Window x:Class="LicenseGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Generator" Height="350" Width="525" FontSize="14" Background="#FF2F506B">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="EncryptedTextBox" Grid.Row="0" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch" Background="#FF1D1C1C" Foreground="LawnGreen" TextWrapping="Wrap"/>
        <TextBox Name="DecryptedTextBox" Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Background="#FF1D1C1C" Foreground="LawnGreen"
          TextWrapping="Wrap"/>
        <TextBox Name="LicenseTextBox" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" Margin="5,5,5,5" Height="25" Background="#FF1D1C1C" Foreground="LawnGreen"
                 Width="300"/>
        <Button Name="GenerateButton" Content="Generate" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="100" Height="30" Margin="5" Click="GenerateButton_OnClick" IsDefault="True"/>
    </Grid>
</Window>
